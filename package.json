{
  "name": "ytil",
  "version": "1.0.0",
  "description": "Utility stuff that I use a lot",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:prepare && yarn build:tsc && yarn build:tsc-alias && yarn build:copy && yarn build:rsync",
    "build:prepare": "test -x .dist && rm -rf .dist; mkdir -p .dist",
    "build:tsc": "tsc -p tsconfig.json --outDir .dist",
    "build:tsc-alias": "tsc-alias -p tsconfig.json --outDir .dist",
    "build:copy": "copyfiles -u 1 src/**/*.yml .dist",
    "build:rsync": "rsync -uvaz --delete .dist/ dist/; rm -rf .dist",
    "clean": "rimraf .dist dist",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./src/*.ts",
      "types": "./src/*.ts"
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.16.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.1.0",
    "vite-tsconfig-paths": "^4.0.7"
  }
}