{
  "name": "ytil",
  "version": "1.0.0",
  "description": "Utility stuff that I use a lot",
  "author": "Joost Lubach",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm clean && pnpm build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "error-polyfill": "^0.1.3",
    "lodash": "^4.17.21",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.16.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}