{
  "name": "ytil",
  "version": "1.0.1",
  "description": "Utility stuff that I use a lot",
  "author": "Joost Lubach",
  "private": false,
  "license": "MIT",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "npm clean && npm build:tsc",
    "build:tsc": "npm build:tsc:esm && npm build:tsc:cjs",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module esnext --outDir dist/esm --declarationDir dist/types",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module commonjs --outDir dist/cjs --declaration false --declarationMap false",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "lint": "eslint src --ext ts,tsx",
    "check": "tsc --noEmit",
    "test": "bun run test"
  },
  "dependencies": {
    "error-polyfill": "^0.1.3",
    "lodash": "^4.17.21",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@types/ms": "^0.7.34",
    "@types/node": "^18.19.31",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "typescript": "5.4.3"
  }
}