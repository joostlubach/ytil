{
  "name": "ytil",
  "version": "1.0.0",
  "description": "Utility stuff that I use a lot",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "pnpm build:tsc:esm",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module ESNext --outDir dist/esm",
    "build:cjs": "pnpm build:tsc:cjs",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module CommonJS --outDir dist/cjs",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./*": {
      "require": {
        "types": "./dist/cjs/*.d.ts",
        "default": "./dist/cjs/*.js"
      },
      "import": {
        "types": "./dist/esm/*.d.ts",
        "default": "./dist/esm/*.js"
      }
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "error-polyfill": "^0.1.3",
    "lodash": "^4.17.21",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.16.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}