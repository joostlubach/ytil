{
  "name": "ytil",
  "version": "1.0.0",
  "description": "Utility stuff that I use a lot",
  "author": "Joost Lubach",
  "license": "MIT",
  "scripts": {
    "build": "(pnpm build:prepare && pnpm build:tsc && pnpm build:tsc-alias && pnpm build:copy && pnpm build:rsync); pnpm build:cleanup",
    "build:prepare": "test -x .build && rm -rf .build; mkdir -p .build",
    "build:tsc": "tsc -p tsconfig.json --outDir .build/cjs && tsc -p tsconfig.esm.json --outDir .build/esm",
    "build:tsc-alias": "tsc-alias -p tsconfig.json --outDir .build/cjs && tsc-alias -p tsconfig.esm.json --outDir .build/esm",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css .build/cjs && copyfiles -u 1 src/**/*.yml src/**/*.css .build/esm",
    "build:rsync": "rsync -uvaz --delete .build/ dist/",
    "build:cleanup": "rimraf .build",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test jest"
  },
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./*": {
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "types": "./dist/cjs/*.d.ts"
    }
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "dependencies": {
    "error-polyfill": "^0.1.3",
    "lodash": "^4.17.21",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.16.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}