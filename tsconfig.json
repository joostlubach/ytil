{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [
    "src"
  ]
}